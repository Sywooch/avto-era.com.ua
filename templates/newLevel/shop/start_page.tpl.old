<div class="page-main">
    {/*}<div class="frame-start-page-category-menu">
        <div class="container">
            {\Category\RenderMenu::create()->setConfig(array('cache'=>TRUE))->load('start_page_category_menu')}
        </div>
    </div>{ */}
    <div class="filter-bus_benefits container">
        <div class="filter-bus f_l">
            <div class="title"><span class="text-el">Быстрый подбор автошин</span></div>
            <div class="check-appointment p_r d_i-b v-a_m">
                <span class="icon_appointment"></span>
                <div class="lineForm">
                    <select class="color" id="appointment" name="appointment" onchange="getCatSelect(this, 'season')">
                        <option value="0" selected="selected">выбрать</option>
                        {foreach getCategs(0) as $c}
                            <option value="{echo $c->getId()}">{echo $c->getName()}</option>
                        {/foreach}
                    </select>
                </div>
            </div>
            <div class="check-season p_r d_i-b v-a_m">
                <span class="icon_season"></span>
                <div class="lineForm">
                    <select class="color" id="season" name="season" onchange="getPropSelect(this, 'diameter')">
                        <option value="0" selected="selected">выбрать</option>
                    </select>
                </div>
            </div>
            <div class="check-diameter p_r d_i-b v-a_m">
                <span class="icon_diameter"></span>
                <div class="lineForm">
                    <select class="color" id="diameter" name="diameter">
                        <option value="0" selected="selected">выбрать</option>
                    </select>
                </div>
            </div>
            <form class="d_i-b" action="" method="get" id="mainFilterForm">
                <div class="btn-filter-bus v-a_m">
                    <button type="submit" disabled="disabled">
                        <span class="text-el">выбрать</span>
                    </button>
                </div>
                <span class="datas f-s_0"></span>
            </form>
        </div>
        <div class="benefits f_r">
            <ul>
                <li><span class="icon_work-time"></span>Работаем 7 дней в неделю</li>
                <li><span class="icon_system"></span>Гибкая система скидок для клиентов</li>
                <li><span class="icon_deliv-ben"></span>Доставка по Украине бесплатная</li>
            </ul>
        </div>
    </div>
    <div id="action_products">
        <div class="preloader"></div>
        {widget_ajax('action_products', '#action_products')}
    </div>
    <div class="horizontal-carousel">
        <div id="popular_products">
            {widget('popular_products', TRUE)}
        </div>
    </div>
    <div id="new_products">
        <div class="preloader"></div>
        {widget_ajax('new_products', '#new_products')}
    </div>
    {widget('brands')}
    <div class="frame-seotext-news">
        <div class="frame-seo-text">
            <div class="container">
                <div class="text seo-text">
                    {widget('start_page_seo_text')}
                </div>
            </div>
        </div>
        {widget('latest_news', TRUE)}
    </div>
</div>

<script type="text/javascript">
    initDownloadScripts(['cusel-min-2.5']);
</script>